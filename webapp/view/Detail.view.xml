<mvc:View controllerName="zm209_chng_req.controller.Detail" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:footerbar="sap.ushell.ui.footerbar">
	<semantic:DetailPage id="page" navButtonPress="onNavBack" showNavButton="{device>/system/phone}" title="{detailModel>/NotifNumber}"
		busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}" class = "hideNavigation">
		<semantic:content>
			<FlexBox class="sapUiSmallMarginTop" alignItems="Start" justifyContent="SpaceBetween">
				<items>
					<HBox>
						<Title level="H4" class="sapUiSmallMarginBegin" text="{detailModel>/NotifNumber} /"/>
						<Title level="H4" class="sapUiSmallMarginBegin" text="{= ${detailModel>/FieldsDesc/NotifTypeDesc} === '' ? '-' : ${detailModel>/FieldsDesc/NotifTypeDesc}}"/>
					</HBox>
					<Title level="H4" class="sapUiSmallMarginEnd StatusFontColor" text="{detailModel>/NotifHeadStatus}"/>
				</items>
			</FlexBox>
			<l:Grid class="sapUiSmallMarginTop" vSpacing="0.5" defaultSpan="L4 M6 S10">
				<HBox>
					<Text text="{i18n>subTypeText}: "/>
					<Text class="sapUiTinyMarginBegin" text="{= ${detailModel>/FieldsDesc/SubtypeDesc} === '' ? '-' : ${detailModel>/FieldsDesc/SubtypeDesc}}">
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</Text>
				</HBox>
				<HBox >
					<Text text="{i18n>projIdText}: "></Text>
					<Text class="sapUiTinyMarginBegin" text="{= ${detailModel>/FieldsDesc/ProjectDesc} === '' ? '-' : ${detailModel>/FieldsDesc/ProjectDesc}}">
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</Text>
					<layoutData>
						<l:GridData span="XL4 L5 M10 S10"/>
					</layoutData>
				</HBox >
				<HBox class="floatRight">
					<Text text="{i18n>startDateText}: "></Text>
					<Text class="sapUiTinyMarginBegin" text="{ path: 'detailModel>/StartDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'dd/MM/yyyy'} }"/>
					<layoutData>
						<l:GridData span="XL4 L3 M10 S10"/>
					</layoutData>
				</HBox>
				<HBox>
					<Text text="{i18n>categoryText}: "/>
					<Text class="sapUiTinyMarginBegin" text="{= ${detailModel>/FieldsDesc/CategDesc} === '' ? '-' : ${detailModel>/FieldsDesc/CategDesc}}">
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</Text>
				</HBox>
				<HBox >
					<Text text="{i18n>dateRaisedText}: "></Text>
					<Text class="sapUiTinyMarginBegin" text="{ path: 'detailModel>/DateRaised', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'dd/MM/yyyy'} }"/>
					<layoutData>
						<l:GridData span="XL4 L5 M10 S10"/>
					</layoutData>
				</HBox >
				<HBox class="floatRight">
					<Text text="{i18n>estEndDateText}: "></Text>
					<Text class="sapUiTinyMarginBegin" text="{ path: 'detailModel>/EndDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'dd/MM/yyyy'} }"/>
					<layoutData>
						<l:GridData span="XL4 L3 M10 S10"/>
					</layoutData>
				</HBox>
				<HBox >
					<Text text="{i18n>modifiedByText}: "></Text>          
					<Text class="sapUiTinyMarginBegin" text="{= ${detailModel>/FieldsDesc/ModifiedByDesc} === '' ? '-' : ${detailModel>/FieldsDesc/ModifiedByDesc}}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</HBox >
				<HBox>
					<Text text="{detailModel>/FieldsDesc/PriorityDesc}"/>
					<layoutData>
						<l:GridData span="XL4 L3 M2 S4"/>
					</layoutData>
				</HBox>
			</l:Grid>
			<IconTabBar id="iconTabBar" select="onSelectIconTab" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter id="iconTabBarInform" key = "infoTab" text="{i18n>informationTabText}" icon="sap-icon://request" tooltip="{i18n>detailIconTabBarInfo}">
						<content>
							<core:Fragment fragmentName="zm209_chng_req.fragments.informationTab" id="infoDisplayFragment" type="XML"/>
						</content>
					</IconTabFilter>
					<IconTabFilter  key = "attachmentTab" text="{i18n>AttachmentsTabText}" icon="sap-icon://attachment" tooltip="{i18n>detailIconTabBarAttachments}">
					   <content>
							<core:Fragment fragmentName="zm209_chng_req.fragments.attachmentTab" id="attachmentFragment" type="XML"/>
						</content>	
					</IconTabFilter>
					<IconTabFilter id="iconTabBarApproval"  key = "approvalTab" text="{i18n>ApprovalText}" icon="sap-icon://document-text" tooltip="{i18n>iconTabBarApproval}">
						<content>
							<!--<core:Fragment fragmentName="zm209_chng_req.fragments.approvalrouteTab" id="approvalrouteFragment" type="XML"/>-->
						</content>
					</IconTabFilter>
					<IconTabFilter id="iconTabBarNotes"   key = "notesTab" text="{i18n>NotesText}" icon="sap-icon://notes" tooltip="{i18n>NotesText}">
						<content>
							<core:Fragment fragmentName="zm209_chng_req.fragments.notesTab" id="notesFragment" type="XML"/>
						</content>
					</IconTabFilter>
					<IconTabFilter  key = "workOrderTab" text="{i18n>WorkOrdersTabText}" icon="sap-icon://eam-work-order" tooltip="{i18n>WorkOrdersTabText}">
						<content>
							<core:Fragment fragmentName="zm209_chng_req.fragments.workorderTab" id="workOrderFragment" type="XML"/>
						</content>
					</IconTabFilter>
					<IconTabFilter  key = "taskListTab" text="{i18n>TaskTabText}" icon="sap-icon://task" tooltip="{i18n>TaskTabText}">
						<content>
							<core:Fragment fragmentName="zm209_chng_req.fragments.taskListTab" type="XML"/>
						</content>
				</IconTabFilter>
				<IconTabFilter text="{i18n>LinksText}"  key = "linksTab" icon="sap-icon://chain-link" tooltip="{i18n>LinksText}">
					<content>
						<core:Fragment fragmentName="zm209_chng_req.fragments.linkTab" id="linkFragment" type="XML"/>
					</content>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</semantic:content>
	<semantic:customFooterContent>
		<Button text="{i18n>editFooter}" visible = "{detailView>/edit}" press="onPressFooterEdit"/>
		<Button text="{i18n>saveFooter}" visible = "{detailView>/save}"  press="onPressFooterSave"/>
		<Button text="{i18n>cancelFooter}" visible = "{detailView>/cancel}"  press="onPressFooterCancel"/>
	</semantic:customFooterContent>
</semantic:DetailPage>
</mvc:View>